{
  "name": "sales-inquiry-app",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' tsx server/index.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' vite build && NODE_OPTIONS='--max-old-space-size=8192' esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push --force --config=./drizzle.config.ts",
    "db:seed": "tsx db/seed.ts",
    "migrate-to-supabase": "node scripts/migrate-to-supabase.js"
  },
  "dependencies": {
    "sales-inquiry-app": "file:"
  }
}
